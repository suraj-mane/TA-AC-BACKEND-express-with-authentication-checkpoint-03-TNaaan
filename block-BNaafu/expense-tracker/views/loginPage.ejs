<%- include("particle/header")-%>
<div class="container">
  <form action="/users/login" method="post" class="w-50 border border-dark p-3 m-auto mt-5 text-center">
    <h2>Login</h2>
    <input type="text" name="email" class="w-100 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Email">
    <input type="text" name="password" class="w-100 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the password">
    <button type="submit" class="btn btn-primary fw-bolder mt-3">Login</button>
    <a href="/users/forgotpassword">
      <button type="button" class="btn btn-primary fw-bolder mt-3 mx-3">Forgot password</button>
    </a>
  </form>
</div>
<%- include("particle/footer")-%>