<%- include("particle/header")-%>
<div class="container">
 <div class="row">
  <div class="col">
    <form action="" method="GET">
      <h2 class="mt-3">Show By Date</h2>
      <input type="date" name="start" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Starting Date">
      <input type="date" name="end" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Ending Date">
      <button type="submit" class="btn btn-primary fw-bolder ">Show</button>
    </form>
    <form action="" method="GET">
      <h2 class="mt-3">Show By Month</h2>
      <input type="month" name="month" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Starting Date">
      <button type="submit" class="btn btn-primary fw-bolder ">Show Data</button>
    </form>
    <form action="" method="GET">
      <h2 class="mt-3">Show By Category</h2>
      <input type="text" name="incomecategory" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Category">
      <input type="text" name="expensecategory" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Category">
      <button type="submit" class="btn btn-primary fw-bolder mt-3">Show Data</button>
    </form>
    <form action="" method="GET">
      <h2 class="mt-3">Show By Date and Category</h2>
      <input type="date" name="start" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Starting Date">
      <input type="text" name="category" class="w-10 mt-2 border border-dark rounded-3 p-2" placeholder="Enter the Category">
      <button type="submit" class="btn btn-primary fw-bolder ">Show Data</button>
    </form>
  </div>
  <div class="col">
    <h2 class="mt-3 text-center">Show Data</h2>
    <table class="w-100">
      <thead>
        <tr class="border border-dark p-2">
          <th class="border border-dark p-2">Income</th>
          <th class="border border-dark p-2">Expense</th>
          <th class="border border-dark p-2">Current Month</th>
          <th class="border border-dark p-2">Balance</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border border-dark p-2">
          <%if(totalIncome || totalExpense || balance || month){%>
            <th class="border border-dark p-2"><%= totalIncome%></th>
            <th class="border border-dark p-2"><%= totalExpense%></th>
            <th class="border border-dark p-2"><%= month%></th>
            <th class="border border-dark p-2"><%= balance%></th>
          <%}%>
        </tr>
      </tbody>
    </table>
  </div>
 </div>
</div>
<%- include("particle/footer")-%>
